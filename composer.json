{
    "name": "netlogix/sentry",
    "description": "sentry client for Flow & Neos",
    "type": "neos-package",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "neos/flow": "^7.3.6 || ^8.0.4 || ~9.0.0",
        "sentry/sdk": "^3.1",
        "ext-openssl": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "Netlogix\\Sentry\\": "Classes/"
        }
    },
    "extra": {
        "neos": {
            "package-key": "Netlogix.Sentry"
        }
    },
    "config": {
        "allow-plugins": {
            "neos/composer-plugin": true
        }
    },
    "require-dev": {
        "neos/behat": "@dev"
    }
}
